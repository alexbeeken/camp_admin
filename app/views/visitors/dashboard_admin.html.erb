<div class='camp-roster'>
  <table class='table table-striped table-hover table-condensed'>
      <tr>
        <th>
          name
        </th>
        <th>
          application
        </th>
        <th>
          health
        </th>
        <th>
          travel
        </th>
        <th>
          legal
        </th>
        <th>
          profile updated
        </th>
      </tr>
    <% @campers.each do |camper| %>
      <tr>
        <td>
          <%= link_to camper.name, user_path(camper.id) %>
        </td>
        <% if camper.last_completed_application %>
          <td class='success'>
            <%= link_to "completed", application_path(camper.last_completed_application.id) %>
            <icon class='glyphicon glyphicon-ok'></icon>
          </td>
        <% else %>
          <td class='danger'>
            not completed
          </td>
        <% end %>
        <% if camper.last_health_form %>
          <td class='success'>
            <%= link_to "completed", health_path(camper.last_health_form.id) %>
            <icon class='glyphicon glyphicon-ok'></icon>
          </td>
        <% else %>
          <td class='danger'>
            not completed
          </td>
        <% end %>
        <% if camper.last_travel_form %>
          <td class='success'>
            <%= link_to "completed", travel_path(camper.last_travel_form.id) %>
            <icon class='glyphicon glyphicon-ok'></icon>
          </td>
        <% else %>
          <td class='danger'>
            not completed
          </td>
        <% end %>
        <% if camper.last_legal_form %>
          <td class='success'>
            <%= link_to "completed", legal_path(camper.last_legal_form.id) %>
            <icon class='glyphicon glyphicon-ok'></icon>
          </td>
        <% else %>
          <td class='danger'>
            not completed
          </td>
        <% end %>
          <% if !camper.profile_needs_updating %>
            <td class='success'>
              complete
              <icon class='glyphicon glyphicon-ok'></icon>
            </td>
          <% else %>
            <td class='danger'>
              not completed
            </td>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
