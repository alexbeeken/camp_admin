<div class='form'>
  <table class='table table-striped table-hover'>
    <th>
      name
    </th>
    <th>
      start_date
    </th>
    <th>
      end_date
    </th>
    <th>
      location
    </th>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= link_to event.title, event_path(event.id) %>
        </td>
        <td>
          <%= event.start_date %>
        </td>
        <td>
          <%= event.end_date %>
        </td>
        <td>
          <%= event.location %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'Create New Event', new_event_path, class: 'btn btn-primary' %>
</div>
